<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".ScoreFragment"
    tools:showIn="@layout/score_fragment"
    android:id="@+id/score_fragment_contents"
    android:layout_gravity="center"
    >



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="32sp"
        android:textColor="@color/primary_text"
        android:text="@string/score_banner"
        android:id="@+id/score_banner_text_view"
    />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score_text_view"
        android:layout_marginStart="16dp"
        android:textColor="@color/primary_text"
        android:layout_below="@id/score_banner_text_view"


    />


</RelativeLayout>